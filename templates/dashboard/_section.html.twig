<div class="container mt-5">
    <div class="row">
        <div class="col-8">
            {% if section == 'authors' %}
                <input type="text" name="newRessource" id="newRessource" class="form-control"
                       placeholder="Ajouter un auteur">
            {% endif %}
            {% if section == 'publishers' %}
                <input type="text" name="newRessource" id="newRessource" class="form-control"
                       placeholder="Ajouter un éditeur">
            {% endif %}
        </div>
        <div class="col-4">
            <button class="btn btn-outline-success" title="Ajouter" id="add-btn">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>
    <label>
    </label>
    <table class="table table-hover table-borderless table-dark">
        {% for ressource in ressources %}
            <tr class="row">
                <td class="col-8">{{ ressource.name }}</td>
                <td class="col-4 actions-btn">
                    <button class="btn edit-btn btn-outline-primary" title="Éditer"
                            data-class="{{ section }}" data-id="{{ ressource.id }}">
                        <i class="fas fa-pen"></i>
                    </button>
                    <button class="btn delete-btn btn-outline-danger" title="Supprimer"
                            data-class="{{ section }}" data-id="{{ ressource.id }}">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>