<div class="container mt-5">
    <div class="row">
        <div class="col-8">
            <input type="text" name="newAuthor" id="newAuthor" class="form-control" placeholder="Ajouter un auteur">
        </div>
        <div class="col-4">
            <button class="btn btn-outline-success" title="Ajouter" id="add-btn">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>
    <label>
    </label>
    <table class="table table-hover table-borderless table-dark">
        {% for author in authors %}
            <tr class="row">
                <td class="col-8">{{ author.name }}</td>
                <td class="col-4 actions-btn">
                    <button class="btn edit-btn btn-outline-primary" title="Ã‰diter"
                            data-class="authors" data-id="{{ author.id }}">
